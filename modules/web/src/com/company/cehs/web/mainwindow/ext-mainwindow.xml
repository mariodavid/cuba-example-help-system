<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:main="http://schemas.haulmont.com/cuba/mainwindow.xsd"
        class="com.company.cehs.web.mainwindow.ExtAppMainWindow">

    <layout expand="foldersSplit">
        <hbox id="titleBar" stylename="cuba-app-menubar"
              expand="mainMenu" width="100%" height="theme://cuba.web.mainWindow.header.height"
              spacing="true" margin="false;false;false;true">

            <embedded id="logoImage" align="MIDDLE_LEFT" type="IMAGE" stylename="cuba-app-icon"/>

            <main:menu id="mainMenu" align="MIDDLE_LEFT"/>

            <main:ftsField id="ftsField" align="MIDDLE_LEFT"/>

            <main:userIndicator id="userIndicator" align="MIDDLE_LEFT"/>

            <main:timeZoneIndicator id="timeZoneIndicator" align="MIDDLE_LEFT"/>

            <hbox id="mainButtonsBox" stylename="cuba-main-buttons" align="MIDDLE_LEFT">
                <main:newWindowButton id="newWindowButton"
                                      icon="app/images/new-window.png"
                                      description="msg://newWindowBtnDescription"/>

                <main:logoutButton id="logoutButton"
                                   icon="app/images/exit.png"
                                   description="msg://logoutBtnDescription"/>
            </hbox>
        </hbox>

        <split id="foldersSplit" width="100%" orientation="horizontal" pos="200px">
            <main:foldersPane id="foldersPane" width="100%" height="100%"/>

            <split id="helpSplit" width="100%" height="100%" orientation="horizontal">
                <main:workArea id="workArea" width="100%" height="100%">
                    <main:initialLayout spacing="true" margin="true">

                    </main:initialLayout>
                </main:workArea>
                <vbox id="helpHbox" spacing="true" margin="true" width="100%" height="100%">
                    <accordion id="helpAcc" width="100%" height="100%">
                        <tab id="generalHelpTab" caption="msg://generalHelp" spacing="true" margin="true">
                            <scrollBox width="100%" id="generalHelpScrollBox" height="100%">
                            <label id="generalHelpLabel" value="" htmlEnabled="true" width="100%"/>
                            </scrollBox>
                        </tab>
                        <tab id="keyboardShortcutsTab" caption="msg://keyboardShortcuts" spacing="true" margin="true">
                            <scrollBox width="100%" id="keyboardShortcutScrollBox" height="100%">
                            <label id="keyboardShortcutLabel" value="" htmlEnabled="true" width="100%"/>
                            </scrollBox>
                        </tab>
                        <tab id="userDefinedHelpTab" caption="msg://userDefinedHelp" spacing="true" margin="true">
                            <scrollBox width="100%" id="userDefinedHelpScrollBox" height="100%">
                            <label id="userDefinedHelpLabel" value="" htmlEnabled="true" width="100%"/>
                            </scrollBox>
                        </tab>

                    </accordion>
                </vbox>
            </split>
        </split>
    </layout>
</window>
